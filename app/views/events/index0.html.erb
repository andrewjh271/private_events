<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Location</th>
      <th>Description</th>
      <th>Host</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.includes(:host).each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date_only %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= event.host.username %></td>
        <td><%= link_to 'Show', event %></td>
        <% if event.host == current_user %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

