<h4><%= @event.name %></h4>

<p>You're almost done! Now it's time to invite some guests!</p>


<%= form_with(url: event_invitations_path(@event), local: true) do |f| %>
  <%= hidden_field_tag(:event_id, @event.id) %>

  <% User.all.each do |user| %>
    <div class='checkbox'>
      <%= f.check_box("recipient[#{user.id}]", { checked: @event.invitations.exists?(recipient_id: user.id) }) %>
      <%= user.username %>
      <%#= f.label(user.id, user.username) %>
    </div>
  <% end %>
  <br>
  <%= submit_tag('Invite Guests!') %>
<% end %>

<br>
<%= button_to 'Now now', user_url, method: :get %>